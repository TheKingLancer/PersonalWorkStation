<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.phantom.personalworkstation.dao.UserLoginDAO">
	<insert id="addUser" parameterType="UserLogin" >
		<selectKey   resultType="java.lang.String" order="BEFORE"  keyProperty="id">
		 select uuid() from dual
		</selectKey>
		insert into user_login values(uuid(),#{email},#{password},#{verify})
	</insert>
	
	<select id="selectUserByEmail" parameterType="java.lang.String" resultType="UserLogin">
		select id,email,password,verify from user_login where email = #{email}
	</select>
</mapper>